generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id              Int              @id
    login           String           @unique
    authIdentifiers AuthIdentifier[]
    areDatasFetched Boolean          @default(false)
    datas           UserDatas?
}

model AuthIdentifier {
    identifier String @id @unique
    user       User   @relation(fields: [userId], references: [id])
    userId     Int
}

model UserDatas {
    id     Int  @id @default(autoincrement())
    user   User @relation(fields: [userId], references: [id])
    userId Int  @unique

    year Int

    achievments AchivementUser[]
    locations   Location[]
}

model AchivementUser {
    id Int @id @default(autoincrement())

    UserDatas   UserDatas @relation(fields: [userDatasId], references: [id])
    userDatasId Int

    achievment   Achievment @relation(fields: [achievmentId], references: [id])
    achievmentId Int

    unlockedAt DateTime
}

model Achievment {
    id             Int              @id
    name           String
    description    String
    image          String
    tier           String
    kind           String
    AchivementUser AchivementUser[]
}

model Location {
    id Int @id @default(autoincrement())

    UserDatas   UserDatas @relation(fields: [userDatasId], references: [id])
    userDatasId Int

    host    String
    beginAt DateTime
    endAt   DateTime
}
