generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id              Int              @id
    login           String           @unique
    authIdentifiers AuthIdentifier[]
    areDatasFetched Boolean          @default(false)
    datas           UserDatas?
}

model AuthIdentifier {
    identifier String @id @unique
    user       User   @relation(fields: [userId], references: [id])
    userId     Int
}

model UserDatas {
    id     Int  @id @default(autoincrement())
    user   User @relation(fields: [userId], references: [id])
    userId Int  @unique

    year Int

    achievments AchivementUser[]
    locations   Location[]
    EventUser   EventUser[]
    ProjectUser ProjectUser[]
}

model AchivementUser {
    id Int @id @default(autoincrement())

    UserDatas   UserDatas @relation(fields: [userDatasId], references: [id])
    userDatasId Int

    achievment   Achievment @relation(fields: [achievmentId], references: [id])
    achievmentId Int

    unlockedAt DateTime
}

model Achievment {
    id             Int              @id
    name           String
    description    String
    image          String
    tier           String
    kind           String
    AchivementUser AchivementUser[]
}

model Location {
    id Int @id @default(autoincrement())

    UserDatas   UserDatas @relation(fields: [userDatasId], references: [id])
    userDatasId Int

    host    String
    beginAt DateTime
    endAt   DateTime
}

model EventUser {
    id Int @id @default(autoincrement())

    UserDatas   UserDatas @relation(fields: [userDatasId], references: [id])
    userDatasId Int

    Event   Event @relation(fields: [eventId], references: [id])
    eventId Int
}

model Event {
    id Int @id @default(autoincrement())

    name      String
    beginAt   DateTime
    location  String
    kind      String
    EventUser EventUser[]
}

model ProjectUser {
    id Int @id @default(autoincrement())

    UserDatas   UserDatas @relation(fields: [userDatasId], references: [id])
    userDatasId Int

    Project   Project @relation(fields: [projectId], references: [id])
    projectId Int

    finalMark       Int?
    status          String
    markedAt        DateTime
    isValidated     Boolean
    ProjectUserTeam ProjectUserTeam[]
}

model ProjectUserTeam {
    id Int @id @default(autoincrement())

    ProjectUser   ProjectUser @relation(fields: [projectUserId], references: [id])
    projectUserId Int

    name String

    isLocked    Boolean
    isValidated Boolean
    isClosed    Boolean

    status String

    finalMark Int?
    createdAt DateTime
    lockedAt  DateTime?
    closedAt  DateTime?

    users String[]
}

model Project {
    id Int @id @default(autoincrement())

    name        String
    slug        String
    cursus      Int
    ProjectUser ProjectUser[]
}
